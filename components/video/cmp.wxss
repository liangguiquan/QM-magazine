.container {
    width: 700rpx;
}

.video {
    /* object-fit: contain; 当视频大小与 video 容器大小不一致时，视频的表现形式 */
    width: 700rpx;
    height: 400rpx;
    z-index: 99;
}
.poster-container{
    position: relative;
    width: 700rpx;
    height: 400rpx;
}
.poster {
    width: 100%;
    height: 100%;
}
.controler {
    position: absolute;
    left: 50%;
    top: 50%;
    margin-left: -50rpx;
    margin-top: -50rpx;
    width: 100rpx;
    height: 100rpx;
    background-color: rgba(0, 0, 0, 0.6);
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 50%;
}
.play-btn {
    width: 30rpx;
    height: 30rpx;
    margin-top: 20rpx;
}
.duration{
    font-size: 24rpx;
    color: #fff;
}
.main-title{
    font-size: 40rpx;
    padding: 20rpx;
}
.mask {
    position: fixed;
    /* display: none; */
    top: 0;
    left: 0;
    width: 750rpx;
    height: 1334rpx;
    background-color: rgba(0, 0, 0, 0.6);
}